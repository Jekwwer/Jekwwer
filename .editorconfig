# .editorconfig: Enforces consistent coding styles across the project.

# Top-most EditorConfig file
root = true

# Global settings: Unix-style newlines and UTF-8 encoding
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 88
trim_trailing_whitespace = true

# Configuration file settings (e.g., .editorconfig, .gitignore)
[*.{editorconfig,gitignore,ini,prettierrc,toml}]
trim_trailing_whitespace = false

# JSON-specific settings
[*.json]
max_line_length = off

# Markdown-specific settings
[*.md]
max_line_length = 120
trim_trailing_whitespace = false

# Python-specific settings
[*.py]
indent_size = 4

# SVG-specific settings (Present in the repository but no special rules needed)
[*.svg]
# No overrides, but this section helps indicate SVG files exist in the project.

# YAML-specific settings (Present in the repository but follows global rules)
[*.{yml,yaml}]
# No overrides, but keeping this as a placeholder for potential future rules.

# Text and log files
[*.{txt,log}]
trim_trailing_whitespace = false
